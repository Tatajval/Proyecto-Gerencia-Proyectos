@model BackEnd.Entidades.Rutas

@{
    ViewData["Title"] = "Nueva Ruta";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Agrega enlaces a tus archivos CSS aquí si los tienes -->
    <link rel="stylesheet" href="tu_estilo.css">
    <style>
        /* Estilos para el contenedor */
        .container {
            max-width: 1500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f5f5f5;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        /* Estilos para los botones */
        .btn {
            margin-right: 5px;
        }

        /* Estilos para el formulario */
        .form-group {
            margin-bottom: 20px;
        }

        /* Estilos para el título del formulario */
        h4 {
            margin-top: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <h4>Ruta</h4>
        <hr />

        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Ruta" class="control-label">Nombre de Ruta</label>
                        <input asp-for="Ruta" class="form-control" />
                        <span asp-validation-for="Ruta" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CantidadDeParadas" class="control-label">Cantidad de Paradas</label>
                        <input asp-for="CantidadDeParadas" class="form-control" />
                        <span asp-validation-for="CantidadDeParadas" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PrecioPorPersona" class="control-label">Precio por Persona</label>
                        <input asp-for="PrecioPorPersona" class="form-control" />
                        <span asp-validation-for="PrecioPorPersona" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="EstaActivo" /> @Html.DisplayNameFor(model => model.EstaActivo)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Crear ruta" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-dark">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Agrega aquí tus scripts si los necesitas -->
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
