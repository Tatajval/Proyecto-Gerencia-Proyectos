@model BackEnd.Entidades.Rutas

@{
    ViewData["Title"] = "Rutas";
}
<style>
    /* Estilos para el contenedor */
    .container {
        max-width: 1500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f5f5f5;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    /* Estilos para los formularios */
    .form-group {
        margin-bottom: 15px;
    }

    /* Estilos para los botones */
    .btn {
        margin-right: 5px;
    }
</style>
<div class="container">
    <h1>Eliminar</h1>

    <h4>Ruta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ruta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ruta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CantidadDeParadas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CantidadDeParadas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioPorPersona)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecioPorPersona)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EstaActivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstaActivo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdRuta" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-dark">Regresar</a>
    </form>
</div>
