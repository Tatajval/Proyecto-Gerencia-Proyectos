@model IEnumerable<BackEnd.Entidades.Unidades>

@{
    ViewData["Title"] = "Unidades";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Agrega enlaces a tus archivos CSS aquí si los tienes -->
    <link rel="stylesheet" href="tu_estilo.css">
    <style>
        /* Estilos para el contenedor */
        .container {
            max-width: 1500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f5f5f5;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        /* Estilos para los botones */
        .btn {
            margin-right: 5px;
        }

        /* Estilos para la tabla */
        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        /* Estilos para el título de la página */
        h1 {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <p>
            <a asp-action="Create" class="btn btn-primary">Nueva unidad</a>
        </p>

        <table>
            <thead>
                <tr>
                    <th>Número de Placa</th>
                    <th>Capacidad de Pasajeros</th>
                    <th>Estado de la Unidad</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.NumeroDePlaca)</td>
                        <td>@Html.DisplayFor(modelItem => item.CapacidadDePasajeros)</td>
                        <td>@Html.DisplayFor(modelItem => item.IdEstadoDeUnidadNavigation.Descripcion)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.IdUnidad" class="btn btn-info">Información</a>
                            <a asp-action="Edit" asp-route-id="@item.IdUnidad" class="btn btn-warning">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.IdUnidad" class="btn btn-danger">Borrar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Agrega aquí tus scripts si los necesitas -->
</body>
</html>
