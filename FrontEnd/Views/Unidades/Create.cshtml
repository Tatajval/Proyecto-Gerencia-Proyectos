@model BackEnd.Entidades.Unidades

@{
    ViewData["Title"] = "Unidades";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Agrega enlaces a tus archivos CSS aquí si los tienes -->
    <link rel="stylesheet" href="tu_estilo.css">
    <style>
        /* Estilos para el contenedor */
        .container {
            max-width: 1500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f5f5f5;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        /* Estilos para los botones */
        .btn {
            margin-right: 5px;
        }

        /* Estilos para el formulario */
        form {
            margin-top: 20px;
        }

        label {
            font-weight: bold;
        }

        /* Estilos para el título de la página */
        h1 {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroDePlaca" class="control-label">Número de Placa</label>
                <input asp-for="NumeroDePlaca" class="form-control" />
                <span asp-validation-for="NumeroDePlaca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadDePasajeros" class="control-label">Capacidad de Pasajeros</label>
                <input asp-for="CapacidadDePasajeros" class="form-control" />
                <span asp-validation-for="CapacidadDePasajeros" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEstadoDeUnidad" class="control-label">Estado de la Unidad</label>
                <select asp-for="IdEstadoDeUnidad" class="form-control" asp-items="ViewBag.IdEstadoDeUnidad"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear unidad" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Cancelar</a>
            </div>
        </form>
    </div>

    <!-- Agrega aquí tus scripts si los necesitas -->
</body>
</html>

