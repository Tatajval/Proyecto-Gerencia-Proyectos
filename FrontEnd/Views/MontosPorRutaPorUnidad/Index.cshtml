@model IEnumerable<BackEnd.Entidades.MontosPorRutaPorUnidad>

@{
    ViewData["Title"] = "Recaudación por ruta por unidad";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Agrega enlaces a tus archivos CSS aquí si los tienes -->
    <link rel="stylesheet" href="tu_estilo.css">
    <style>
        /* Estilos para el contenedor */
        .container {
            max-width: 1500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f5f5f5;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        /* Estilos para los botones */
        .btn {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <h4>Administración de recaudación por fecha por ruta por unidad</h4>
        <p>
            <a asp-action="Create" class="btn btn-primary">Establecer recaudación</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdRutaNavigation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdUnidadNavigation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MontoEstimado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MontoRecaudado)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fecha)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdRutaNavigation.Ruta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdUnidadNavigation.NumeroDePlaca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MontoEstimado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MontoRecaudado)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Información</a> |
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Borrar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
