@model BackEnd.Entidades.MontosPorRutaPorUnidad

@{
    ViewData["Title"] = "Recaudación por ruta por unidad";
}
<style>
    /* Estilos para el contenedor */
    .container {
        max-width: 1500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f5f5f5;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    /* Estilos para los formularios */
    .form-group {
        margin-bottom: 15px;
    }

    /* Estilos para los botones */
    .btn {
        margin-right: 5px;
    }
</style>
<div class="container">
    <h1>Eliminar</h1>

    <h4>Recaudación por ruta por unidad</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdRutaNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdRutaNavigation.IdRuta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdUnidadNavigation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdUnidadNavigation.NumeroDePlaca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MontoEstimado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MontoEstimado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MontoRecaudado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MontoRecaudado)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-dark">Regresar</a>
    </form>
</div>
