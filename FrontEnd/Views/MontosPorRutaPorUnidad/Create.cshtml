@model BackEnd.Entidades.MontosPorRutaPorUnidad

@{
    ViewData["Title"] = "Recaudación por ruta por unidad";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Agrega enlaces a tus archivos CSS aquí si los tienes -->
    <link rel="stylesheet" href="tu_estilo.css">
    <style>
        /* Estilos para el contenedor */
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f5f5f5;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        /* Estilos para los formularios */
        .form-group {
            margin-bottom: 15px;
        }

        /* Estilos para los botones */
        .btn {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <h4>Recaudación por ruta por unidad</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Fecha" class="control-label"></label>
                        <input asp-for="Fecha" class="form-control" type="date" />
                        <span asp-validation-for="Fecha" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdRuta" class="control-label"></label>
                        <select asp-for="IdRuta" class="form-control" asp-items="ViewBag.IdRuta"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdUnidad" class="control-label"></label>
                        <select asp-for="IdUnidad" class="form-control" asp-items="ViewBag.IdUnidad"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="MontoEstimado" class="control-label"></label>
                        <input asp-for="MontoEstimado" class="form-control" />
                        <span asp-validation-for="MontoEstimado" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MontoRecaudado" class="control-label"></label>
                        <input asp-for="MontoRecaudado" class="form-control" value="0" />
                        <span asp-validation-for="MontoRecaudado" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-dark">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
