@{
    ViewData["Title"] = "Control de rutas";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Agrega enlaces a tus archivos CSS aquí si los tienes -->
    <link rel="stylesheet" href="tu_estilo.css">
    <style>
        /* Estilos para el contenedor */
        .container {
            max-width: 1500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f5f5f5;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }





        /* Estilos para el texto centrado */
        .text-center {
            text-align: center;
        }

        .display-4 {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        /* Estilos para los botones */
        .btn {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="text-center">
            <h1 class="display-4">Control de rutas</h1>
            <p>Bienvenidos al portal de servicio de control de rutas</p>
        </div>
    </div>
</body>
</html>
