@model BackEnd.Entidades.ConductoresPorUnidad

@{
    ViewData["Title"] = "Asignación de conductores";
}
<style>
    /* Estilos para el contenedor */
    .container {
        max-width: 1500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f5f5f5;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    /* Estilos para los formularios */
    .form-group {
        margin-bottom: 15px;
    }

    /* Estilos para los botones */
    .btn {
        margin-right: 5px;
    }
</style>
<div class="container">
    <h1>Modificar</h1>

    <h4>Conductor de unidad</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="IdUnidad" class="control-label"></label>
                    <select asp-for="IdUnidad" class="form-control" asp-items="ViewBag.IdUnidad"></select>
                    <span asp-validation-for="IdUnidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdConductor" class="control-label"></label>
                    <select asp-for="IdConductor" class="form-control" asp-items="ViewBag.IdConductor"></select>
                    <span asp-validation-for="IdConductor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-dark">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
