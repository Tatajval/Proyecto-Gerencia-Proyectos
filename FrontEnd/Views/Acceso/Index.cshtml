@model BackEnd.Entidades.Usuarios
@{
    Layout = null;

    ViewData["Title"] = "Control de rutas";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" href="~/icon.ico" />
    <style>
        body {
            background-image: url("yellow-futuristic-city-transport-bus-on-road-near-bus-stop-station-sign-on-map-with-traffic-n.jpg");
            background-size: cover;
            background-position: center;
        }
    </style>
    <title>@ViewData["Title"] - Iniciar Sesión</title>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white text-center">
                        <h2>Control de Rutas</h2>
                        <h3>Buena Vista</h3>
                       
                        @*<h4 class="font-weight-light">Portal Administrativo para el Control de las Rutas de las Unidades de Autobús.</h4>  *@
                     @*   <img src="./Images/bus.png" alt="Girl in a jacket" width="500" height="600">*@
                    </div>
                    <div class="card-body">
                        <form asp-action="Autenticacion" asp-controller="Acceso" method="post">
                            <div class="mb-3">
                                <label class="form-label">Usuario:</label>
                                <input type="text" class="form-control" asp-for="Usuario" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Contraseña:</label>
                                <input type="password" class="form-control" asp-for="Contrasena" />
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>


                            <center>      <img src="./Images/depositphotos_125743084-stock-illustration-bus-symbol-passenger-bus-silhouette.jpg" alt="Girl in a jacket" width="250" height="300">  </center>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
</body>
</html>
