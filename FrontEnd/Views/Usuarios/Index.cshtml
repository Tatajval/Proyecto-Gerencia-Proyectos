@model IEnumerable<BackEnd.Entidades.Usuarios>

@{
    ViewData["Title"] = "Usuarios";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <!-- Agrega enlaces a tus archivos CSS aquí si los tienes -->
    <link rel="stylesheet" href="tu_estilo.css">
    <style>
        /* Estilos para el contenedor */
        .container {
            max-width: 1500px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Estilos para la tabla */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f5f5f5;
            text-align: left;
        }

        /* Estilos para los botones */
        .btn-group {
            display: flex;
        }

        .btn {
            margin-right: 5px;
        }

        /* Estilos para el encabezado */
        h1 {
            margin-bottom: 20px;
        }

    </style>
</head>
<body>
    <div class="container">
        <h1>Administración de usuarios</h1>

        <p>
            <a asp-action="Create" class="btn btn-primary">Nuevo usuario</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Usuario)</th>
                    <th>@Html.DisplayNameFor(model => model.EstaActivo)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Usuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.EstaActivo)</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@item.IdUsuario" class="btn btn-info">Información</a>
                                <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-danger">Borrar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Agrega aquí tus scripts si los necesitas -->
</body>
</html>
